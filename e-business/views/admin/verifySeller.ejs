                        <div class="card mb-4">
                            <div class="card-header">
                                <i class="fas fa-table mr-1"></i>
                                
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Name</th>
                                                <th>email</th>
                                                <th>address</th>
                                                <th>phone_no</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tfoot>
                                            <tr>
                                                <th>ID</th>
                                                <th>Name</th>
                                                <th>email</th>
                                                <th>address</th>
                                                <th>phone_no</th>
                                                <th>Action</th>
                                            </tr>
                                        </tfoot>
                                        <tbody>
                                            <% sellerInfo.forEach(s=>{%>
                                                <% if(s.verified == 0){%>
                                                    <tr>
                                                        <td><%= s.user_id %> </td>
                                                        <td><%= s.name %></td>
                                                        <td><%= s.email %></td>
                                                        <td><%= s.address %></td>
                                                        <td><%= s.phone_no %></td>
                                                        <td> <a class="btn btn-success" href="/admin/verifySeller/<%= s.user_id %>">verify</a></td>
                                                    </tr>
                                                    
                                                    <%} %> 
                                                
                                                <%}) %> 
                                           
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
                